<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartActivity" >

    <TextView
        android:id="@+id/tvGameDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_desc" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvGameDesc"
        android:layout_below="@+id/tvPorkSet"
        android:layout_marginRight="19dp"
        android:layout_marginTop="83dp"
        android:text="@string/confirm" />

    <TextView
        android:id="@+id/tvPorkSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvGameDesc"
        android:layout_below="@+id/tvPeopleNum"
        android:layout_marginTop="61dp"
        android:text="@string/poker_set" />

    <TextView
        android:id="@+id/tvPeopleNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPorkSet"
        android:layout_below="@+id/tvGameDesc"
        android:layout_marginTop="65dp"
        android:text="@string/people_num" />

    <EditText
        android:id="@+id/txtPorkSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvPorkSet"
        android:layout_alignBottom="@+id/tvPorkSet"
        android:layout_alignLeft="@+id/txtPeopleNum"
        android:ems="10"
        android:inputType="number">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtPeopleNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvPeopleNum"
        android:layout_alignBottom="@+id/tvPeopleNum"
        android:layout_alignRight="@+id/tvGameDesc"
        android:ems="10"
        android:inputType="number" />

</RelativeLayout>